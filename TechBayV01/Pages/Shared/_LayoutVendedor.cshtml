<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechBayV01</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechBayV01.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/d554066ab9.js" crossorigin="anonymous"></script>

</head>
<body class="bg-gradient-to-br from-[#118EBF] via-[#55B3D9] to-[#118EBF] font-sans">
    <div class="flex h-screen p-4">
        <!-- Sidebar -->
        <div class="w-44 bg-[#118EBF] rounded-3xl shadow-2xl flex flex-col text-white mr-4 flex-shrink-0">
            <!-- Logo -->
            <div class="p-6 flex flex-col items-center">
                <div class="w-24 h-24 bg-gradient-to-br from-[#55B3D9] to-[#118EBF] rounded-2xl flex items-center justify-center shadow-lg mb-2">
                    <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center">
                        <div class="w-7 h-7 bg-gradient-to-br from-green-400 to-green-600 rounded-full"></div>
                    </div>
                </div>
                <span class="text-sm font-semibold">TechBay</span>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 px-3 space-y-2">
                <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition">
                    <i class="fa-regular fa-house"></i>
                    <span class="text-sm pl-4">Home</span>
                </a>

                <a href="#" class="flex items-center px-4 py-3 rounded-xl bg-[#55B3D9] text-white shadow-lg transition">
                    <i class="fa-solid fa-dolly"></i>
                    <span class="text-sm font-semibold pl-4">Estoque</span>
                </a>

                <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    <span class="text-sm">Vendors</span>
                </a>

                <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span class="text-sm">Messages</span>
                </a>

                <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                    </svg>
                    <span class="text-sm">Categories</span>
                </a>

                <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                    </svg>
                    <span class="text-sm">Folders</span>
                </a>
            </nav>

            <!-- Bottom Navigation -->
            <div class="px-3 pb-6 space-y-2">
                <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="text-sm">Settings</span>
                </a>

                <a href="#" class="flex items-center px-4 py-3 rounded-xl text-white/70 hover:text-white hover:bg-white/10 transition">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                    </svg>
                    <span class="text-sm">
                        <partial name="_LoginPartial" />
                    </span>
                </a>
            </div>
        </div>

        <!-- Main Content Area -->
        <main role="main" class="flex-1 flex flex-col overflow-hidden">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
</body>
</html>