@section Scripts {
    <script>
        // Simple wave chart drawing
        const canvas = document.getElementById('revenueChart');
        if (canvas) {
            const ctx = canvas.getContext('2d');

            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;

            const width = canvas.width;
            const height = canvas.height;

            // Draw grid lines
            ctx.strokeStyle = '#f0f0f0';
            ctx.lineWidth = 1;
            for (let i = 0; i < 5; i++) {
                const y = (height / 4) * i;
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(width, y);
                ctx.stroke();
            }

            // Draw purple wave (Earned)
            ctx.strokeStyle = '#118EBF';
            ctx.lineWidth = 3;
            ctx.beginPath();
            for (let x = 0; x < width; x++) {
                const y = height / 2 + Math.sin((x / width) * Math.PI * 4) * (height / 4);
                if (x === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            }
            ctx.stroke();

            // Draw green wave (Forecasted)
            ctx.strokeStyle = '#55B3D9';
            ctx.lineWidth = 3;
            ctx.beginPath();
            for (let x = 0; x < width; x++) {
                const y = height / 2 + Math.sin((x / width) * Math.PI * 4 + Math.PI / 2) * (height / 4);
                if (x === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            }
            ctx.stroke();

            // Y-axis labels
            const labels = ['100M', '50M', '10M'];
            ctx.fillStyle = '#999';
            ctx.font = '12px sans-serif';
            ctx.textAlign = 'right';
            labels.forEach((label, i) => {
                ctx.fillText(label, 40, (height / 4) * (i + 1));
            });
        }
    </script>
    <script>
        const modal = document.getElementById('crud-modal');
        const overlay = document.getElementById('modalOverlay');
        const modalContent = document.getElementById('modalContent');
        const form = document.getElementById('productForm');

        // Função para abrir o modal (compatível com Flowbite)
        function openModal() {
            modal.classList.remove('hidden');
            overlay.classList.remove('hidden');

            setTimeout(() => {
                overlay.classList.add('opacity-100');
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        // Função para fechar o modal (compatível com Flowbite)
        function closeModal() {
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
            overlay.classList.remove('opacity-100');

            setTimeout(() => {
                modal.classList.add('hidden');
                overlay.classList.add('hidden');
                form.reset();
            }, 300);
        }

        // Event listeners para data-modal-toggle (Flowbite)
        document.querySelectorAll('[data-modal-toggle="crud-modal"]').forEach(button => {
            button.addEventListener('click', openModal);
        });

        // Event listeners para data-modal-hide (Flowbite)
        document.querySelectorAll('[data-modal-hide="crud-modal"]').forEach(button => {
            button.addEventListener('click', closeModal);
        });

        // Fechar modal ao clicar no overlay
        overlay.addEventListener('click', closeModal);

        // Fechar modal com tecla ESC
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
                closeModal();
            }
        });

        // Handler do formulário
        form.addEventListener('submit', (e) => {
            e.preventDefault();

            const product = {
                name: document.getElementById('productName').value,
                price: document.getElementById('productPrice').value,
                category: document.getElementById('productCategory').value,
                description: document.getElementById('productDescription').value
            };

            console.log('Produto criado:', product);
            alert('Produto adicionado com sucesso!');
            closeModal();
        });
    </script>
